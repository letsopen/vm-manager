<view class="container">
  <form bindsubmit="handleSubmit">
    <view class="form-item">
      <text class="label">服务器名称</text>
      <input 
        name="name" 
        placeholder="请输入服务器名称"
        class="input"
      />
    </view>

    <view class="form-item">
      <text class="label">API地址</text>
      <input 
        name="apiUrl" 
        placeholder="请输入API地址"
        class="input"
      />
    </view>

    <view class="form-item">
      <text class="label">API Key</text>
      <input 
        name="apiKey" 
        placeholder="请输入API Key"
        class="input"
      />
    </view>

    <view class="form-item">
      <text class="label">API Secret</text>
      <input 
        name="apiSecret" 
        type="password" 
        placeholder="请输入API Secret"
        class="input"
      />
    </view>

    <view class="form-buttons">
      <button type="primary" formType="submit">保存</button>
      <button bindtap="handleCancel">取消</button>
    </view>
  </form>
</view> 